<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema para el modo claro -->
    <style name="AppTheme.Light" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Personaliza los colores para el modo claro -->
        <item name="colorPrimary">@color/blue_light</item>
        <item name="colorPrimaryVariant">@color/blue_dark_light</item>
        <item name="colorOnPrimary">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <!-- Tema para el modo oscuro -->
    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Personaliza los colores para el modo oscuro -->
        <item name="colorPrimary">@color/blue_dark_dark</item>
        <item name="colorPrimaryVariant">@color/blue_light</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowBackground">@color/darker_gray_dark</item>
    </style>
</resources>
