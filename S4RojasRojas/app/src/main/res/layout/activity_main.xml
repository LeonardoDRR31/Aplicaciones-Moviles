<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/fondo_encuesta">

    <!-- Título de la Encuesta -->

    <!-- Espaciador entre el título y los botones -->

    <TextView
        android:id="@+id/surveyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Aplicaciones Moviles"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_weight="1" />

    <!-- Botón de inicio de encuesta -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/startSurveyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar Encuesta"
        android:textColor="@android:color/white"
        app:iconGravity="textStart"
        app:cornerRadius="16dp"
        app:backgroundTint="@color/colorPrimary"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_gravity="center" />

    <!-- Espaciador entre los botones -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp"
        />


</LinearLayout>

